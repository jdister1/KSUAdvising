@{
    ViewBag.Title = "Index";
}

@section Scripts {
<script type="text/JavaScript">

    $(document).ready(function () {
        $("#loginButton").click(function () {
            sendAlert();
        });
    });

    function sendAlert() {
        //autogenerated hub proxy by signalR, getting the reference here
        var alertHubProx = $.connection.alertHub;

        //starts a connection with the hub
        $.connection.hub.start().done(function () {

            alertHubProx.server.appointmentArrival("Alert", "Joe Has Arrived");
            
        });
        //alertHubProx.client.addNewMessageToPage = function (name, message) {
        //    alert(name + "  " + message);
        //};
           
    }

    function sendWalkinAlert() {
        var alertHubProx = $.connection.alertHub;

        $.connection.hub.start().done(function () {
            alertHubProx.server.walkingArrival("Walk in Alert", "Howie");
        });
    }
</script>
}
<style>
    #loginButton{
        background-color: #009DDB;
    }
    
    .icon-bar > a:hover
    {
        background-color: #002664;
    }
    
    #passwordError{
        background-color: #9E3039;
    }
    #usernameError{
       background-color: #9E3039;
    }
</style>

   <!-- Start of Layout Skeleton-->
<div id="navbar" class="icon-bar one-up">

    <a id="home_button" class="item">
        <span class="login_header">KSU Advising</span>
    </a>
</div>
<div class="small-4 small-centered columns">
    <form>
        <fieldset>
            <legend>Login</legend>
            <!-- ADD CLASS ERROR TO DIVS TO SHOW THE PROPER ERRORS -->
            <div class="row collapse postfix-radius">
                <div class="small-9 columns ">
                    <input type="text" placeholder="Flashline ID">
                    <small id="usernameError" class="error">Invalid Flashline ID</small>
                </div>
                <div class="small-3 columns">
                    <span class="postfix">@@kent.edu</span>
                </div>
            </div>
            <div class="row">
                <input type="text" placeholder="Password">
                <small id="passwordError" class="error">Invalid Password</small>
            </div>
        </fieldset>
        <a href="#" id="loginButton" class="button success">Login</a>
    </form>

</div>
<!-- End of layout skeleton -->

